---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />

    <main>
      <!-- Name Heading -->
      <h1>Grace Chan</h1>

      <!-- Professional Blurb -->
      <p style="font-weight: normal;">
        Grace Chan is a Berlin-based motion designer from Ireland and a graduate of both the Irish School of Animation and Animation Mentor. She delivers professional animation and motion design services for projects of all sizes, combining technical skill with creativity to bring ideas to life.
      </p>

      <!-- Portfolio Section -->
      <section id="portfolio">
        <h2>My Work</h2>
        <div class="portfolio-grid">
          <!-- Example placeholder projects -->
          <div class="project">
            <img src="/public/img/project1.png" alt="Project 1" />
            <h3>Project Title 1</h3>
          </div>
          <div class="project">
            <img src="/public/img/project2.png" alt="Project 2" />
            <h3>Project Title 2</h3>
          </div>
          <!-- Add more projects here -->
        </div>
      </section>

      <!-- Blog Section -->
      <section id="blog">
        <h2>Experiments & Blog</h2>
        <p>
          I share tutorials, small experiments, and behind-the-scenes work here.
        </p>
        <!-- Blog posts can be added dynamically later -->
      </section>
    </main>

    <Footer />
  </body>
</html>
